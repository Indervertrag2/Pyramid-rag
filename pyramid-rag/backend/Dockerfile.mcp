FROM python:3.11-slim

WORKDIR /app

# Install minimal dependencies for MCP server
RUN pip install --no-cache-dir \
    fastapi==0.115.0 \
    uvicorn[standard]==0.30.6 \
    httpx==0.26.0 \
    websockets==12.0

# Copy MCP server
COPY app/mcp_network_server.py /app/

# Expose port
EXPOSE 8001

# Run the MCP server
CMD ["python", "mcp_network_server.py"]