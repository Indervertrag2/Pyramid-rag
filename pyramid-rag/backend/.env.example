# Application
APP_NAME=Pyramid RAG Platform
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Database
DATABASE_URL=postgresql+asyncpg://pyramid:pyramid_secure_pass@postgres:5432/pyramid_rag
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Account
ADMIN_EMAIL=admin@pyramid-computer.de
ADMIN_PASSWORD=PyramidAdmin2024!
ADMIN_DEPARTMENT=Management

# Storage
UPLOAD_DIR=/app/data/uploads
PROCESSED_DIR=/app/data/processed
TEMP_DIR=/app/data/temp
MAX_UPLOAD_SIZE=5368709120  # 5GB
STORAGE_SHARDS=10

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
BATCH_SIZE=50
MAX_WORKERS=4

# Embeddings
EMBEDDING_MODEL=sentence-transformers/distiluse-base-multilingual-cased-v2
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# LLM Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_TIMEOUT=120
MAX_TOKENS=4096
TEMPERATURE=0.7

# Vector Database
VECTOR_DIMENSION=768
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=20

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
METRICS_ENABLED=True